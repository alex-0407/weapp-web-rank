.button__container {
  text-align: center;
  padding-top: 12px;
  padding-bottom: 12px;
}

.button__left:hover {
  border: 1px solid gold;
}

.button__right {
  margin-left: 10px; 
}

.button__right:hover {
  border: 1px solid gold;
}

.rank__banner {
  /* background-image: linear-gradient(135deg, #79f1a4, #0e5cad); */
  color: #fff;
  /* padding: 0 15px; */
}

.rank__title {
  font-size: 28px;
  text-align: center;
  padding: 15px;
}

.rank__list {
  padding: 0 15px 15px;
}

.rank__item {
  padding: 15px 0;
  border-bottom: 1px dotted #eee;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #fff;
  color: #4e4f54;
}

.rank__item--first {
  padding: 15px;
  text-align: center;
  overflow: hidden;
  background-color: rgba(8, 105, 132, .52);
  color: #60bed8;
  border: 0;
  flex-direction: column;
}

.rank__item--last {
  border-bottom: 0;
}

.rank__no {
  width: 30px;
  font-size: 14px;
  text-align: center;
}

.rank__icon {
  width: 58px;
  height: 58px;
  background: #f3f3f3; 
}

.rank__icon--first {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin-bottom: 10px;
  animation: rank__icon--first 20s infinite linear;
}

@keyframes rank__icon--first {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

.rank__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 8px;
}

.rank__name {
  font-size: 16px;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.rank__detail {
  font-size: 14px;
  word-break: break-all;
  word-wrap: break-word;
}

.rank__detail--close {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 2;
}

.rank__tip {
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 0 15px 15px;
}
